generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  avatar    String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pets      Pet[]

  @@map("users")
}

enum PetSexType {
  male
  female
}

enum AnimalType {
  dog
  cat
}

model Pet {
  id          String     @id @default(uuid())
  name        String
  photo       String
  breed       String
  weight      Float
  age         Int
  sex         PetSexType
  description String
  animal      AnimalType
  isAvailable Boolean    @default(true)
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("pets")
}

model RecoverPassword {
  id             String   @id @default(uuid())
  codeValidation String
  userId         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("recover_password")
}
